<%- include('../partials/header.ejs')%>
    <h2>New Trade</h2>
        <form action = '/trades' method = 'POST'>
            <table>
                <tr>
                    <td><label for="name" >Card Name</label></td>
                    <td><input type="text" id="name" name="name" required></td>
                </tr>
                <tr>
                    <td><label for="category" >Category</label></td>
                    <td><select id="category" name="category" required>
                        <option value="Monster">Monster</option>
                        <option value="Spell/Trap">Spell/Trap</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="desc">Description</label></td>
                    <td><input type="text" id="desc" name="desc" required minlength="10"></td>
                </tr>
                <tr>
                    <td><label for="available" >Available</label></td>
                    <td>
                    <select id="status" name="status" required>
                    <option value="Available">Available</option>
                    <option value="Unavailable">Unavailable</option>
                    </select>
                </td>
                </tr>
                <tr>
                    <td colspan="2" class = "align-right"><button>Submit</button></td>
                </tr>
                </table>        
        </form>

<%- include('../partials/footer.ejs')%>
